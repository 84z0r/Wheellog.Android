<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/main_view"
    tools:context="com.cooper.wheellog.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"/>

    <android.widget.TextClock
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:format24Hour="HH:mm:ss"
        android:format12Hour="HH:mm:ss"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->

        <android.support.v7.widget.GridLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:columnCount="2"
            app:orientation="horizontal">


            <TextView
                android:paddingTop="10dp"
                style="@style/Stats.Title"
                android:text="Speed"/>

            <TextView
                android:id="@+id/tvSpeed"
                style="@style/Stats"
                android:text="0.0 KPH" />


            <TextView
                android:paddingTop="10dp"
                style="@style/Stats.Title"
                android:text="Max Speed"/>

            <TextView
                android:id="@+id/tvMaxSpeed"
                style="@style/Stats"
                android:text="0.0 KPH" />

            <TextView
                android:paddingTop="10dp"
                style="@style/Stats.Title"
                android:text="Battery"/>

            <TextView
                android:id="@+id/tvBattery"
                style="@style/Stats"
                android:text="0%" />

            <TextView
                android:paddingTop="10dp"
                style="@style/Stats.Title"
                android:text="Distance"/>

            <TextView
                android:id="@+id/tvCurrentDistance"
                style="@style/Stats"
                android:text="0.0 KM" />

            <TextView
                android:paddingTop="10dp"
                style="@style/Stats.Title"
                android:text="Ride Time"/>

            <TextView
                android:id="@+id/tvRideTime"
                style="@style/Stats"
                android:text="00:00" />

            <TextView
                android:paddingTop="10dp"
                style="@style/Stats.Title"
                android:text="Voltage"/>

            <TextView
                android:id="@+id/tvVoltage"
                style="@style/Stats"
                android:text="0V" />

            <TextView
                android:paddingTop="10dp"
                style="@style/Stats.Title"
                android:text="Current"/>

            <TextView
                android:id="@+id/tvCurrent"
                style="@style/Stats"
                android:text="0.0W" />

            <TextView
                android:paddingTop="10dp"
                style="@style/Stats.Title"
                android:text="Temperature"/>

            <TextView
                android:id="@+id/tvTemperature"
                style="@style/Stats"
                android:text="0.0 C" />

            <TextView
                android:paddingTop="10dp"
                style="@style/Stats.Title"
                android:text="Fan Status"/>

            <TextView
                android:id="@+id/tvFanStatus"
                style="@style/Stats"
                android:text="Off" />

            <TextView
                android:paddingTop="10dp"
                style="@style/Stats.Title"
                android:text="Total Distance"/>

            <TextView
                android:id="@+id/tvTotalDistance"
                style="@style/Stats"
                android:text="0.0 KM" />

            <TextView
                android:paddingTop="10dp"
                style="@style/Stats.Title"
                android:text="Name"/>

            <TextView
                android:id="@+id/tvName"
                style="@style/Stats"
                android:text="NAME"/>

            <TextView
                android:paddingTop="10dp"
                style="@style/Stats.Title"
                android:text="Type"/>

            <TextView
                android:id="@+id/tvType"
                style="@style/Stats"
                android:text="KS16B"
                app:layout_columnWeight="1" />

            <TextView
                android:paddingTop="10dp"
                style="@style/Stats.Title"
                android:text="Version"/>

            <TextView
                android:id="@+id/tvVersion"
                android:text="120"
                style="@style/Stats"/>

            <TextView
                android:paddingTop="10dp"
                style="@style/Stats.Title"
                android:text="Serial Number"/>

            <TextView
                android:id="@+id/tvSerial"
                style="@style/Stats"
                android:text="SERIAL_NUMBER" />

        </android.support.v7.widget.GridLayout>

    <!--</ScrollView>-->


</LinearLayout>
